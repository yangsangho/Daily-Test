<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/todayQstItemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/delimiter_top">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/QItemName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/delimiter_right"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/QItemRestration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/question_list_whole_title" />

        <TextView
            android:id="@+id/QItemRestration"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:background="@drawable/delimiter_right"
            tools:text="2020-01-13"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/QItemName"
            app:layout_constraintEnd_toEndOf="@id/guideline"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".6" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/QItemChk1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/delimiter_right"
                android:contentDescription="@string/question_item_chk_graph"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/QItemChk2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/graph_bar" />

            <ImageView
                android:id="@+id/QItemChk2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/delimiter_right"
                android:contentDescription="@string/question_item_chk_graph"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:tint="@color/lightGray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/QItemChk3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/QItemChk1"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/graph_bar" />

            <ImageView
                android:id="@+id/QItemChk3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/delimiter_right"
                android:contentDescription="@string/question_item_chk_graph"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:tint="@color/lightGray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/QItemChk4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/QItemChk2"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/graph_bar" />

            <ImageView
                android:id="@+id/QItemChk4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/delimiter_right"
                android:contentDescription="@string/question_item_chk_graph"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:tint="@color/lightGray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/QItemChk5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/QItemChk3"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/graph_bar" />

            <ImageView
                android:id="@+id/QItemChk5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/delimiter_right"
                android:contentDescription="@string/question_item_chk_graph"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:tint="@color/lightGray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/QItemChk6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/QItemChk4"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/graph_bar" />

            <ImageView
                android:id="@+id/QItemChk6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/delimiter_right"
                android:contentDescription="@string/question_item_chk_graph"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:tint="@color/lightGray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/QItemChk7"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/QItemChk5"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/graph_bar" />

            <ImageView
                android:id="@+id/QItemChk7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/question_item_chk_graph"
                android:scaleType="fitXY"
                android:tint="@color/lightGray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/QItemChk6"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/graph_bar" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
